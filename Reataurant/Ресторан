using System;
using System.Collections.Generic;

namespace restaurant
{

    class item
    {
        protected string name;
        protected double price;
        public static int valueAddedTax;
        

        public virtual double Price()
        {
            return price;
        }
        public item(string name, double price, int valueAddedTax)
        {

        }
        public static void Additem(List<item> items, item elem)
        {
            if (elem is Food)
            {
                if (elem is Food.amounts)
                {
                    items.Add(elem);
                }
            }
            else if (elem is Drink)
            {
                if (elem is Drink.volumes)
                {
                    items.Add(elem);
                }
            }
            else
                Console.WriteLine("Такого количества продукта / Такого объема напитка не существует");
        }
    }
    class Drink : item
    {
        protected double volume;
        protected static List<double> volumes = new List<double>();

        public Drink(string name, double price, double volume) : base(name, price)
        {
            this.name = name;
            this.price = price;
            this.volume = volume;
        }
        public double GetPrice()
        {
            return (price * volume) + (price * valueAddedTax);
        }
    }
    class Food : item
    {
        protected int amount;
        protected static List<int> amounts = new List<int>();

        public Food(string name, double price, int amount) : base(name, price)
        {
            this.amount = amount;
        }
        public double GetPriceForFood()
        {
            double temp = Convert.ToDouble(amount);
            return (amount * temp) + (temp * valueAddedTax);
        }
    }


    
    class Program
    {
        static void Main(string[] args)
        {
            List<item> items = new List<item>();
            item.Additem(items, new Food("Котлета с макаронами", 2.33, 2));
            item.Additem(items, new Food("", 2.33, 2));
            item.Additem(items, new Drink("Водка с водой", 2.5, 3));


            foreach (var i in items)
            {
                Console.WriteLine(items[i]);
            }


        }
    }
}
